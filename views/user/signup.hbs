<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
               
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="form" action="/users" method="post" >
                           {{#if check}}
                           <h4 class="text-danger">user already exist</h4>
                           {{/if}}
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="name" class="form-control " name="name" onkeyup="validateName()"  />
                      <p class="text-danger " id="nameerr"></p>
                      <label class="form-label" for="form3Example1c">Your Name</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="email" id="email" class="form-control" name="email" onkeyup="validEmail()" />
                      <p class="text-danger" id="emailerr"></p>
                      <label class="form-label" for="form3Example3c">Your Email</label>
                    </div>
                  </div>
                   <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="tel" id="number" class="form-control" name="number" onkeyup="validateNumber()"  />
                      <p class="text-danger" id="numbererr"></p>
                      <label class="form-label" for="form3Example3c">Enter your number</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" id="password" class="form-control" name="password" onkeyup="validPassword()"  />
                      <p class="text-danger" id="passworderr"></p>
                      <label class="form-label" for="form3Example4c">Password</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" id="rpassword" class="form-control" name="conform_password"  onkeyup="validconformPassword()" />
                      <p class="text-danger" id="rpassworderr"></p>
                      <label class="form-label" for="form3Example4cd">Repeat your password</label>
                    </div>
                  </div>
                     <div class="form-outline flex-fill mb-0">
                      <input type="text" id="referral" class="form-control " name="referral"   />
                      <p class="text-danger " id="nameerr"></p>
                      <label class="form-label" for="form3Example1c">Referral Code</label>
                    </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                    <label class="form-check-label" for="form2Example3">
                      I agree all statements in <a href="#!">Terms of service</a>
                    </label>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg" onclick="return validation()">Register</button>
                  </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://img.freepik.com/free-photo/concept-tasty-food-with-citrus-fruits-two-tone-background_185193-76568.jpg?t=st=1653375425~exp=1653376025~hmac=8469082635a9a3cbe38ee64f6b0d273442a8261f8bebb74588092c2c8741f619&w=900"
                  class="img-fluid " alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
 <script>
    var errorName = document.getElementById('nameerr')
    var errorEmail = document.getElementById('emailerr')
    var errorPassword = document.getElementById('passworderr')
    var errorNumber = document.getElementById('numbererr')
    var errorrpassword= document.getElementById('rpassworderr')
    function validateName() {
        const name = document.getElementById('name').value;
        if (name == "") {
            errorName.innerHTML = 'Enter your Name'
            return false
        }  
        if (!name.match(/^[a-zA-Z]*$/)) {
            errorName.innerHTML = 'invalid'
            
            return false
        }
        errorName.innerHTML = null
        return true

    }
    function validEmail() {
        const name = document.getElementById('email').value
        if (name == "") {
            errorEmail.innerHTML = "enter you email address"
            return false


        }
        if (!name.match(/^\w+([\.-]?\w+)@\w+([\.-]?\w+)(\.\w{2,3})+$/)) {
            errorEmail.innerHTML = 'enter a proper email adress'
            return false
        }

        errorEmail.innerHTML = null
        return true
    }
    function validateNumber(){
      const name = document.getElementById('number').value
      if (name==""){
        errorNumber.innerHTML="enter your number"
       return false 
      }
      if(name.length<10){
        errorNumber.innerHTML="invalid number"
        return false
      }
      errorNumber.innerHTML=null
      return true
    }

    function validPassword() {
        const name = document.getElementById('password').value
        if (name == "") {
            errorPassword.innerHTML = "enter a password"
            return false
        }
        if (name.length < 3) {
            errorPassword.innerHTML = "password should be more than three characters"
            return false
        }
        errorPassword.innerHTML = null
        return true
    }
    function validconformPassword(){
      const name = document.getElementById('rpassword').value
      const names = document.getElementById('password').value
      if(names!=name){
        errorrpassword.innerHTML="password doesn't match"
        return false
      }
      errorrpassword.innerHTML= null
      return true
    }

 
    function validation() {
        if (!validateName() && !validEmail() && !validPassword() && !validateNumber() && !validconformPassword) {
            return false
        }else if(!validateName() || !validEmail() || !validPassword() || !validateNumber() || !validconformPassword){
           return false
        }
        return true
    }
</script>
