									<td class="product-price">Rs{{this.product.price}}</td>
									
									<td class="product-quantity"><span class="border border-secondary px-4 py-2 " id="{{this.item}}"> {{this.quantity}}</span><button onclick="changeQuantity('{{this._id}}','{{this.item}}','{{this.product.name}}',{{this.product.price}},1)" style="border:none; background-color:rgb(255, 255, 255)  " class="fw-bold rounded-pill   mx-2 bg-warning  " >+</button><button onclick="changeQuantity('{{this._id}}','{{this.item}}','{{this.product.name}}',{{this.product.price}},-1)" style="border:none; background-color:rgb(254, 252, 252)" class="fw-bold   bg-warning rounded-pill  " >-</button></td>
									<td class="product-total"  ><span id="{{this.product.name}}">{{this.total}}</span></td>
								</tr>
							
							</tbody>
							{{/each}}
							
